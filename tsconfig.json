{
  "compilerOptions": {
    "declaration": true,
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "typeRoots": ["./src/types", "node_modules/@types"]
  },
  "exclude": ["dist", "tests/**/*", "node_modules"]
}
